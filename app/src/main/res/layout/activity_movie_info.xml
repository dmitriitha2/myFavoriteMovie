<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:orientation="vertical"
    tools:context=".activities.MovieInfoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/movie_info"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:paddingLeft="20dp"
            android:text="@string/movie_info"
            android:textColor="@color/white_text_1"
            android:textSize="25sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/movie_info_image"
            android:layout_width="160dp"
            android:layout_height="230dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:srcCompat="@drawable/a326" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/movie_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:paddingLeft="10dp"
            android:text="название"
            android:singleLine="false"
            android:ellipsize="none"
            android:textColor="@color/white_text_1"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_info_title_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:paddingLeft="10dp"
            android:text="название англ"
            android:singleLine="false"
            android:ellipsize="none"
            android:textColor="@color/white_text_2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:paddingLeft="10dp"
            android:text="Дата выхода: "
            android:singleLine="false"
            android:ellipsize="none"
            android:textColor="@color/white_text_2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_info_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:paddingLeft="10dp"
            android:singleLine="false"
            android:ellipsize="none"
            android:textColor="@color/white_text_1"
            android:textSize="16sp"
            android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:paddingLeft="10dp"
            android:text="Возраст: "
            android:singleLine="false"
            android:ellipsize="none"
            android:textColor="@color/white_text_2"
            android:textSize="16sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/movie_info_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:paddingLeft="10dp"
            android:singleLine="false"
            android:ellipsize="none"
            android:textColor="@color/white_text_1"
            android:textSize="16sp"
            android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:paddingLeft="10dp"
                android:text="Рейтинг: "
                android:singleLine="false"
                android:ellipsize="none"
                android:textColor="@color/white_text_2"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/movie_info_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="3dp"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:ellipsize="none"
                android:textColor="@color/white_text_1"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white_text_2"
            android:text="Описание:" />

        <TextView
            android:id="@+id/movie_info_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/white_text_1"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>