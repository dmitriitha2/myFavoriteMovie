<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8C94"
    android:orientation="vertical"
    tools:context=".AuthActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/inter_bold"
        android:lineSpacingExtra="7dp"
        android:text="@string/auth_welcome_text"
        android:textColor="#f0e8fd"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/user_login_auth"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Логин"
        android:inputType="text"
        android:textColor="#f0e8fd"
        android:textColorHint="#6a6a6a" />

    <EditText
        android:id="@+id/user_pass_auth"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColor="#f0e8fd"
        android:textColorHint="#6a6a6a" />

    <Button
        android:id="@+id/submit_button_auth"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:backgroundTint="#452334"
        android:text="Войти"
        android:textColor="#f0e8fd"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/go_to_reg"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/inter"
        android:lineSpacingExtra="7dp"
        android:text="@string/go_to_reg"
        android:textColor="#f0e8fd"
        android:textSize="17dp"
        android:textStyle="bold" />

</LinearLayout>